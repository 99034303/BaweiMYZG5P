<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main_and_cotegory.fragment.sousuoview.SousuoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_sousuo1"
        android:layout_margin="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/refresh_serch"
            android:layout_width="300dp"
            android:layout_weight="10"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/refresh_serch_back"
            android:padding="5dp">
            <ImageView
                android:id="@+id/iv_suosuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_sousuo" />
            <EditText
                android:id="@+id/et_sousuo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="iPhone 12" />

            <ImageView
                android:id="@+id/iv_paizhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/main_camera" />

        </LinearLayout>
        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textSize="15dp"
            android:text="取消"
            android:id="@+id/tv_fin"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="wrap_content">
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_sousuo2"
        android:layout_below="@+id/ll_sousuo1"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:text="搜索历史"
                android:textSize="20dp"
                android:id="@+id/tv1"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <ImageView
                android:id="@+id/iv_del"
                android:layout_alignParentRight="true"
                android:src="@drawable/del"
                android:layout_width="30dp"
                android:layout_height="match_parent">
            </ImageView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:text="自行车"
                android:padding="10dp"
                android:background="@drawable/item_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_margin="10dp"
                android:text="电脑"
                android:padding="10dp"
                android:background="@drawable/item_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>



        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_below="@+id/tv1"
            android:layout_width="match_parent"
            android:id="@+id/rv_jilu"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ll_sousuo3"
        android:layout_below="@+id/ll_sousuo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:gravity="center"
                android:text="搜索发现"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            </TextView>
            <ImageView
                android:id="@+id/iv_refurbish"
                android:layout_alignParentRight="true"
                android:src="@drawable/refurbish"
                android:layout_width="30dp"
                android:layout_height="match_parent">
            </ImageView>

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_margin="10dp"
                android:text="自行车"
                android:padding="10dp"
                android:background="@drawable/item_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_margin="10dp"
                android:text="电脑"
                android:padding="10dp"
                android:background="@drawable/item_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
            <TextView
                android:layout_margin="10dp"
                android:text="香蕉"
                android:padding="10dp"
                android:background="@drawable/item_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>


        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
    </ScrollView>
</RelativeLayout>